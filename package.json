{
  "name": "event-joining-app",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required for Node.js backend'",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=verbose",
    "test:auth": "vitest run tests/auth.test.js",
    "test:api": "vitest run tests/api.test.js",
    "test:unit": "vitest run tests/unit.test.js",
    "test:all": "npm run test:unit && npm run test:auth",
    "deploy:validate": "node deployment/deploy.js validate-env",
    "deploy:health": "node deployment/deploy.js health-check",
    "deploy:prod": "node deployment/deploy.js deploy",
    "audit": "npm audit --audit-level=moderate",
    "security-check": "npm audit && npm run test:all"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@tailwindcss/forms": "^0.5.7",
    "autoprefixer": "^10.4.17",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "postcss": "^8.4.35",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.2",
    "tailwindcss": "^3.4.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "dotenv": "^16.4.7",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vite": "^7.1.2",
    "vitest": "^2.1.8"
  }
}
