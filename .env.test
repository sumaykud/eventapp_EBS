# Test Environment Configuration
NODE_ENV=test

# JWT Configuration for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-only-do-not-use-in-production
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Supabase Test Configuration
SUPABASE_URL=https://test.supabase.co
SUPABASE_ANON_KEY=test-anon-key-for-testing-only
SUPABASE_SERVICE_ROLE_KEY=test-service-role-key-for-testing-only

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_SENSITIVE_MAX_REQUESTS=3

# Password Security Configuration
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_DURATION=900000

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_SESSIONS_PER_USER=5

# Test Database Configuration
TEST_DB_RESET=true
TEST_CLEANUP_AFTER=true

# Logging Configuration
LOG_LEVEL=error
SUPPRESS_TEST_LOGS=true

# Security Headers
SECURE_HEADERS=true
CSP_ENABLED=false
CORS_ORIGIN=http://localhost:3000